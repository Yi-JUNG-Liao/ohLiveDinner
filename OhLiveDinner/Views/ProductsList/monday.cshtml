
@model MVC_Project.ViewModel.ProductsViewModel

@{
    ViewBag.Title = "Menu";
}

<div class="container" id="menu">
    <div class="row w-auto">
        <div class="col-12 btn_weekday">
            <ul class="list-group col-12">
                <li class="list-group-itempo">
                    @Html.ActionLink("Special", "Products", "ProductsList", null, new { @class = "btn btn-lg btn-circle btn-outline-new-white shake shake-crazy" })
                </li>
                <li class="list-group-itempo">
                    @Html.ActionLink("monday", "monday", "ProductsList", null, new { @class = "btn btn-lg btn-circle btn-outline-new-white shake freez " })
                </li>
                <li class="list-group-itempo">
                    @Html.ActionLink("tuesday", "tuesday", "ProductsList", null, new { @class = "btn btn-lg btn-circle btn-outline-new-white shake shake-slow" })
                </li>
                <li class="list-group-itempo">
                    @Html.ActionLink("wedsday", "wedsday", "ProductsList", null, new { @class = "btn btn-lg btn-circle btn-outline-new-white shake shake-opacity" })
                </li>
                <li class="list-group-itempo">
                    @Html.ActionLink("thrusday", "thrusday", "ProductsList", null, new { @class = "btn btn-lg btn-circle btn-outline-new-white shake shake-rotate" })
                </li>
                <li class="list-group-itempo">
                    @Html.ActionLink("friday", "friday", "ProductsList", null, new { @class = "btn btn-lg btn-circle btn-outline-new-white shake shake-horizontal" })
                </li>
                <li class="list-group-itempo">
                    @Html.ActionLink("saturday", "saturday", "ProductsList", null, new { @class = "btn btn-lg btn-circle btn-outline-new-white shake shake-hard" })
                </li>
                <li class="list-group-itempo">
                    @Html.ActionLink("sunday", "sunday", "ProductsList", null, new { @class = "btn btn-lg btn-circle btn-outline-new-white shake shake-vertical" })
                </li>
            </ul>
        </div>

        <div class="col-12  mx-auto" id="book">
            <div class="" id="flipbook">

                <div class="hard" id="">
                    <h1>Monday</h1>
                </div>

                <div id="page">
                    <h1>Appetizer</h1>
                    @foreach (var i in Model.Appetizer)
                    {
                        <div class="card col-lg-4 mx-auto">
                            <img src="@i.MealPicture" class="card-img-top " alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@i.MealName</h5>
                                <p class="card-text">@i.MealPrice</p>
                                <select id="YourLocation" class="w-50 my-2 mx-auto">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                </select>
                                <div class="btn">
                                    <a href="#">Buy</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div id="page" class="">
                    <h1>Main</h1>
                    @foreach (var i in Model.Main)
                    {
                        <div class="card col-lg-4 mx-auto">
                            <img src="@i.MealPicture" class="card-img-top " alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@i.MealName</h5>
                                <p class="card-text">@i.MealPrice</p>
                                <select id="YourLocation" class="w-50 my-2 mx-auto">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                </select>
                                <div class="btn">
                                    <a href="#">Buy</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div id="page">
                    <h1>Desert</h1>
                    @foreach (var i in Model.Desert)
                    {
                        <div class="card col-lg-4 mx-auto">
                            <img src="@i.MealPicture" class="card-img-top " alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@i.MealName</h5>
                                <p class="card-text">@i.MealPrice</p>
                                <select id="YourLocation" class="w-50 my-2 mx-auto">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                </select>
                                <div class="btn">
                                    <a href="#">Buy</a>
                                </div>
                            </div>
                        </div>
                    }

                </div>

                <div class="" id="page">
                    <h1>Drink</h1>
                    @foreach (var i in Model.Drink)
                    {
                        <div class="card col-lg-4 mx-auto">
                            <img src="@i.MealPicture" class="card-img-top " alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@i.MealName</h5>
                                <p class="card-text">@i.MealPrice</p>
                                <select id="YourLocation" class="w-50 my-2 mx-auto">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                </select>
                                <div class="btn">
                                    <a href="#">Buy</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="hard" id=""></div>
            </div>


        </div>

    </div>
</div>

@section topCSS{
    <link href="~/Assets/css/shake.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">

    <style>
        body {
            background: #000 url("/Assets/images/bg_NightCandle.jpeg") center center no-repeat;
            background-color: #000 !important;
        }

        #menu {
            padding-top: 200px
        }

            #menu:hover {
                cursor: grab;
            }

            #menu:active {
                cursor: grabbing;
            }


        .btn_weekday .list-group {
            display: flex;
            flex-wrap: wrap;
            flex-direction: row;
            width: 100%;
            padding: 0;
            justify-content: center;
