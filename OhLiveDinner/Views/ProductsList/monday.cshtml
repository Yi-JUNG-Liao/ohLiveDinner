        }

            .btn_weekday .list-group li {
                display: block;
                width: 10%;
                margin: 0 1%;
            }

        /*星期一～日的按鈕*/
        .btn_weekday a {
            background: url(/Assets/images//cup.png) center top;
            background-size: cover;
            width: 100%;
            padding: 5rem 0;
            font-size: 1rem;
            border: none;
            color: #000;
            filter: brightness(1.5);
        }

            .btn_weekday a:hover {
                background-color: #000;
                color: #000;
            }

        /*.line {
            width: 30%;
            margin-top: auto;
            margin-bottom: auto;
            border-top: solid #000 1px;
        }*/

        .hard {
            background: #5e331b url(/Assets/images/leather.jpg) center center;
            text-align: center;
            background-size: cover;
            width: 100%;
            height: 100%;
            position: relative;
            /*transform: rotate(90deg);*/
            /*border: 1rem solid #fff;*/
        }

            .hard h1 {
                /*background-color: rgba(0,0,0,.5);*/
                font-family: 'Pacifico', cursive;
                color: rgba(0,0,0,.7);
                /*text-shadow: 2px 2px #5e331b;*/
